<Application
  x:Class="aathoos.App"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:core="using:aathoos.Core"
  RequestedTheme="Dark">

  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
      </ResourceDictionary.MergedDictionaries>

      <!-- Brand palette matching web landing page -->
      <SolidColorBrush x:Key="AppBackgroundBrush"  Color="#1c1a27" />
      <SolidColorBrush x:Key="AppSurfaceBrush"      Color="#23203a" />
      <SolidColorBrush x:Key="AppForegroundBrush"   Color="#dbdcd7" />
      <SolidColorBrush x:Key="AppMutedBrush"        Color="#dbdcd780" />
      <SolidColorBrush x:Key="AppAccentBrush"       Color="#b8235a" />
      <SolidColorBrush x:Key="AppBorderBrush"       Color="#dbdcd714" />

      <!-- Override NavigationView pane to match brand background -->
      <SolidColorBrush x:Key="NavigationViewDefaultPaneBackground"  Color="#23203a" />
      <SolidColorBrush x:Key="NavigationViewExpandedPaneBackground" Color="#23203a" />
      <SolidColorBrush x:Key="NavigationViewContentBackground"      Color="#1c1a27" />

      <!-- Value converters -->
      <core:PriorityToLabelConverter         x:Key="PriorityToLabelConverter" />
      <core:BoolToCheckGlyphConverter        x:Key="BoolToCheckGlyphConverter" />
      <core:BoolToOpacityConverter           x:Key="BoolToOpacityConverter" />
      <core:NullOrEmptyToVisibilityConverter x:Key="NullOrEmptyToVisibilityConverter" />

      <!-- ListView item container â€” removes default padding/selection chrome -->
      <Style x:Key="PlainListViewItemStyle" TargetType="ListViewItem">
        <Setter Property="Padding"                    Value="0" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="Background"                 Value="Transparent" />
        <Setter Property="BorderThickness"            Value="0" />
      </Style>
    </ResourceDictionary>
  </Application.Resources>
</Application>
