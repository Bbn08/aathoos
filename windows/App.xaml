<Application
  x:Class="aathoos.App"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  StartupUri="MainWindow.xaml">

  <Application.Resources>
    <!-- Brand palette -->
    <SolidColorBrush x:Key="AppBackgroundBrush"  Color="#1c1a27" />
    <SolidColorBrush x:Key="AppSurfaceBrush"      Color="#23203a" />
    <SolidColorBrush x:Key="AppForegroundBrush"   Color="#dbdcd7" />
    <SolidColorBrush x:Key="AppMutedBrush"        Color="#80dbdcd7" />
    <SolidColorBrush x:Key="AppAccentBrush"       Color="#b8235a" />
    <SolidColorBrush x:Key="AppBorderBrush"       Color="#14dbdcd7" />
  </Application.Resources>
</Application>
