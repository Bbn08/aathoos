<Window
  x:Class="aathoos.Views.AddTaskDialog"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Title="New Task"
  Width="380" SizeToContent="Height"
  Background="#1c1a27"
  WindowStartupLocation="CenterOwner"
  ResizeMode="NoResize">

  <StackPanel Margin="24,20">
    <TextBlock Text="New Task" FontSize="18" FontWeight="Bold"
               Foreground="#dbdcd7" Margin="0,0,0,20" />

    <TextBlock Text="Title" FontSize="13" Foreground="#80dbdcd7" Margin="0,0,0,4" />
    <TextBox x:Name="TitleBox"
             Background="#23203a" Foreground="#dbdcd7"
             CaretBrush="#dbdcd7" BorderBrush="#30dbdcd7"
             Padding="8,6" Margin="0,0,0,14" />

    <TextBlock Text="Notes (optional)" FontSize="13" Foreground="#80dbdcd7" Margin="0,0,0,4" />
    <TextBox x:Name="NotesBox"
             Background="#23203a" Foreground="#dbdcd7"
             CaretBrush="#dbdcd7" BorderBrush="#30dbdcd7"
             Padding="8,6" Margin="0,0,0,14" />

    <TextBlock Text="Priority" FontSize="13" Foreground="#80dbdcd7" Margin="0,0,0,4" />
    <ComboBox x:Name="PriorityBox" SelectedIndex="1"
              HorizontalAlignment="Stretch" Padding="8,4" Margin="0,0,0,24">
      <ComboBoxItem>Low</ComboBoxItem>
      <ComboBoxItem>Medium</ComboBoxItem>
      <ComboBoxItem>High</ComboBoxItem>
    </ComboBox>

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
      <Button Content="Cancel" Click="OnCancel"
              Padding="16,6" Margin="0,0,8,0" />
      <Button Content="Add Task" Click="OnAdd"
              Background="#b8235a" Foreground="White"
              BorderThickness="0" Padding="16,6" />
    </StackPanel>
  </StackPanel>
</Window>
