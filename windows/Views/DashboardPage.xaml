<UserControl
  x:Class="aathoos.Views.DashboardPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Background="{StaticResource AppBackgroundBrush}">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="1" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <!-- Header -->
    <StackPanel Grid.Row="0" Margin="32,32,32,20">
      <TextBlock Text="Dashboard" FontSize="28" FontWeight="Bold"
                 Foreground="{StaticResource AppForegroundBrush}" />
      <TextBlock Text="Your day at a glance" FontSize="14"
                 Foreground="{StaticResource AppMutedBrush}" Margin="0,4,0,0" />
    </StackPanel>

    <Border Grid.Row="1" Background="{StaticResource AppBorderBrush}" />

    <!-- Content -->
    <ScrollViewer Grid.Row="2">
      <StackPanel Margin="32,24,32,32">

        <!-- Stat cards -->
        <WrapPanel Margin="0,0,0,28">
          <Border Width="200" Padding="20" Margin="0,0,16,16"
                  Background="{StaticResource AppSurfaceBrush}" CornerRadius="12">
            <StackPanel>
              <TextBlock Text="0" FontSize="34" FontWeight="Bold"
                         Foreground="{StaticResource AppForegroundBrush}" />
              <TextBlock Text="Tasks due today" FontSize="14" Margin="0,6,0,0"
                         Foreground="{StaticResource AppMutedBrush}" />
            </StackPanel>
          </Border>

          <Border Width="200" Padding="20" Margin="0,0,16,16"
                  Background="{StaticResource AppSurfaceBrush}" CornerRadius="12">
            <StackPanel>
              <TextBlock Text="0" FontSize="34" FontWeight="Bold"
                         Foreground="{StaticResource AppForegroundBrush}" />
              <TextBlock Text="Notes" FontSize="14" Margin="0,6,0,0"
                         Foreground="{StaticResource AppMutedBrush}" />
            </StackPanel>
          </Border>

          <Border Width="200" Padding="20" Margin="0,0,16,16"
                  Background="{StaticResource AppSurfaceBrush}" CornerRadius="12">
            <StackPanel>
              <TextBlock Text="0" FontSize="34" FontWeight="Bold"
                         Foreground="{StaticResource AppForegroundBrush}" />
              <TextBlock Text="Goals in progress" FontSize="14" Margin="0,6,0,0"
                         Foreground="{StaticResource AppMutedBrush}" />
            </StackPanel>
          </Border>

          <Border Width="200" Padding="20" Margin="0,0,16,16"
                  Background="{StaticResource AppSurfaceBrush}" CornerRadius="12">
            <StackPanel>
              <TextBlock Text="0" FontSize="34" FontWeight="Bold"
                         Foreground="{StaticResource AppForegroundBrush}" />
              <TextBlock Text="Study sessions" FontSize="14" Margin="0,6,0,0"
                         Foreground="{StaticResource AppMutedBrush}" />
            </StackPanel>
          </Border>
        </WrapPanel>

        <!-- Up next -->
        <TextBlock Text="Up next" FontSize="20" FontWeight="SemiBold"
                   Foreground="{StaticResource AppForegroundBrush}" Margin="0,0,0,12" />
        <Border Padding="20" Background="{StaticResource AppSurfaceBrush}" CornerRadius="12">
          <TextBlock Text="Nothing scheduled yet. Add tasks to get started."
                     FontSize="14" Foreground="{StaticResource AppMutedBrush}" />
        </Border>

      </StackPanel>
    </ScrollViewer>
  </Grid>
</UserControl>
