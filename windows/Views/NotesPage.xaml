<UserControl
  x:Class="aathoos.Views.NotesPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Background="{StaticResource AppBackgroundBrush}">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="1" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <StackPanel Grid.Row="0" Margin="32,32,32,20">
      <TextBlock Text="Notes" FontSize="28" FontWeight="Bold"
                 Foreground="{StaticResource AppForegroundBrush}" />
      <TextBlock Text="Linked to subjects and topics" FontSize="14"
                 Foreground="{StaticResource AppMutedBrush}" Margin="0,4,0,0" />
    </StackPanel>

    <Border Grid.Row="1" Background="{StaticResource AppBorderBrush}" />

    <StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center">
      <TextBlock Text="&#xE70B;" FontFamily="Segoe MDL2 Assets" FontSize="40"
                 Foreground="{StaticResource AppAccentBrush}"
                 HorizontalAlignment="Center" Margin="0,0,0,12" />
      <TextBlock Text="Coming soon" FontSize="20" FontWeight="SemiBold"
                 Foreground="{StaticResource AppForegroundBrush}"
                 HorizontalAlignment="Center" Margin="0,0,0,6" />
      <TextBlock Text="Linked to subjects and topics" FontSize="14"
                 Foreground="{StaticResource AppMutedBrush}"
                 HorizontalAlignment="Center" />
    </StackPanel>
  </Grid>
</UserControl>
