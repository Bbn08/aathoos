<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <RootNamespace>aathoos</RootNamespace>
    <UseWPF>true</UseWPF>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>
  <!-- Pre-built Rust DLL (generated by scripts\build-core-windows.ps1) -->
  <ItemGroup>
    <Content Include="Native\aathoos_core.dll" Condition="Exists('Native\aathoos_core.dll')">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <TargetPath>aathoos_core.dll</TargetPath>
    </Content>
  </ItemGroup>
</Project>
